[Interface]
Address = {{ wg_ipv4 }}/32
PrivateKey = {{ wg_private_key }}
ListenPort = {{ wg_port }}
PostUp = iptables -A FORWARD -i {{wg_nic}} -j ACCEPT; iptables -t nat -A POSTROUTING -o {{ wg_public_nic }} -j MASQUERADE
PostDown = iptables -D FORWARD -i {{wg_nic}} -j ACCEPT; iptables -t nat -D POSTROUTING -o {{wg_public_nic}} -j MASQUERADE
